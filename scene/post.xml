<postprocess type="bloom" kernelSize="32" iterations="6" threshold="1.5" amount="0.015" amountSmall="0.02">
    <image name="input" filename="./meta/denoised.exr" />
    <image id="bloom"/>
</postprocess>

<postprocess type="overlay" amount="1.3" mode="multiply">
    <ref name="input" id="bloom"/>
    <image name="overlay" filename="./textures/vignette.png"/>
    <image id="vignette"/>
</postprocess>

<postprocess type="overlay" amount="0.55" mode="add">
    <ref name="input" id="vignette"/>
    <image name="overlay" filename="./textures/lensflare.png"/>
    <image id="final"/>
</postprocess>