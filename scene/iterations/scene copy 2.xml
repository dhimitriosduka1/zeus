<integrator type="pathtracer" depth="4">
    <scene id="scene">
        <camera type="perspective" id="camera">
            <integer name="width" value="512"/>
            <integer name="height" value="512"/>
            <string name="fovAxis" value="x"/>
            <float name="fov" value="50"/>
            <transform>
                <rotate axis="1,0,0" angle="-13"/>
                <translate z="-12" y="0." x="0."/>
            </transform>
        </camera>
        <light type="envmap">
            <texture type="constant" value="0.55,0.65,0.75"/>
        </light>
        <light type="directional" direction="0.8,-1,2.5" intensity="3"/>

        <instance>
            <shape type="mesh" filename="./meshes/cube.ply" smooth="false"/>
            <bsdf type="principled">
                <texture name="baseColor" type="constant" value="1"/>
                <texture name="specular" type="constant" value="0.5"/>
                <texture name="metallic" type="constant" value="0"/>
                <texture name="roughness" type="constant" value="0.8"/>
            </bsdf>
            <!-- <emission type="lambertian">
                 <texture name="emission" type="constant" value="2"/>
            </emission> -->
            <transform>
                <scale x="1.1" y="4" z="1.1"/>
                <translate x="0.0" y="8.0" z="0.0"/>
                <rotate axis="0,1,0" angle="45"/>
                <rotate axis="1,0,0" angle="-12"/>
            </transform>
        </instance>

        <instance>
            <shape type="mesh" filename="./meshes/cube.ply" smooth="false" id="cloudmesh"/>
            <volume type="grid" filename="../tests/volumes/cloud.vol" multiplier="35.5" id="cloudvolume"/>
            <bsdf type="volume" absorption="4.0" light="1.0" phase="0.0" id="cloudshader"/>
            <transform>
                <scale x="405" y="94" z="403"/>
                <scale value="0.032"/>
                <rotate axis="1,0,0" angle="170.0"/>
                <rotate axis="0,1,0" angle="0.0"/>
                <translate x="0.0" y="7.5" z="5.0"/>
            </transform>
        </instance>

        <instance>
            <shape type="mesh" filename="./meshes/cube.ply" smooth="false" id="cloudmesh"/>
            <volume type="grid" filename="../tests/volumes/cloud.vol" multiplier="35.5" id="cloudvolume"/>
            <bsdf type="volume" absorption="4.0" light="1.0" phase="0.0" id="cloudshader"/>
            <transform>
                <scale x="405" y="94" z="403"/>
                <scale value="0.04"/>
                <rotate axis="1,0,0" angle="180.0"/>
                <rotate axis="0,1,0" angle="-20.0"/>
                <translate x="-8.0" y="8.25" z="20.0"/>
            </transform>
        </instance>

        <instance>
            <shape type="mesh" filename="./meshes/cube.ply" smooth="false" id="cloudmesh"/>
            <volume type="grid" filename="../tests/volumes/cloud.vol" multiplier="35.5" id="cloudvolume"/>
            <bsdf type="volume" absorption="4.0" light="1.0" phase="0.0" id="cloudshader"/>
            <transform>
                <scale x="-405" y="94" z="403"/>
                <scale value="0.04"/>
                <rotate axis="1,0,0" angle="180.0"/>
                <rotate axis="0,1,0" angle="25.0"/>
                <translate x="7.0" y="8.25" z="21.0"/>
            </transform>
        </instance>
        
    </scene>
    <sampler type="independent" count="4"/>
    <image id="noisy3"/>
</integrator>
