<integrator type="pathtracer" depth="4">
    <scene id="scene">
        <camera type="perspective" id="camera">
            <integer name="width" value="512"/>
            <integer name="height" value="512"/>
            <string name="fovAxis" value="x"/>
            <float name="fov" value="50"/>
            <transform>
                <rotate axis="1,0,0" angle="-2"/>
                <translate z="-12" y="0." x="0."/>
            </transform>
        </camera>
        <light type="envmap">
            <texture type="constant" value="0.55,0.65,0.75"/>
        </light>
        <light type="directional" direction="0.8,-0.5,2.5" intensity="3.5"/>

        <instance>
            <shape type="mesh" filename="./meshes/cube.ply" smooth="false"/>
            <bsdf type="principled">
                <texture name="baseColor" type="constant" value="0.75"/>
                <texture name="specular" type="constant" value="0.5"/>
                <texture name="metallic" type="constant" value="1"/>
                <texture name="roughness" type="constant" value="0.75"/>
            </bsdf>
            <transform>
                <scale x="1.1" y="4" z="1.1"/>
                <translate x="0.0" y="5.6" z="0.0"/>
                <rotate axis="0,1,0" angle="45"/>
            </transform>
        </instance>

        
    </scene>
    <sampler type="independent" count="32"/>
    <image id="noisy2"/>
</integrator>
